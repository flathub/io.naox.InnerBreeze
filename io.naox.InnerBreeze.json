{
    "app-id": "io.naox.InnerBreeze",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri"
    ],
    "command": "inner_breeze",
    "modules": [
        {
            "name": "InnerBreeze",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dpm644 metadata/flatpak/io.naox.InnerBreeze.desktop /app/share/applications/io.naox.InnerBreeze.desktop",
                "install -Dpm644 metadata/flatpak/io.naox.InnerBreeze.metainfo.xml /app/share/metainfo/io.naox.InnerBreeze.metainfo.xml",
                "install -Dpm644 metadata/flatpak/InnerBreeze.png /app/share/icons/hicolor/256x256/apps/io.naox.InnerBreeze.png",
                "mv data lib inner_breeze /app/",
                "mkdir -p /app/bin",
                "ln -s /app/inner_breeze /app/bin/inner_breeze"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/naoxio/inner_breeze/releases/download/1.0.6/InnerBreeze-Linux-x86_64.tar.gz",
                    "sha256": "2d65ee64011805f06152d9a0368440c03c0530edc11dfe3d5f5904856b04c4e3"
                }
            ]
        }
    ]
}
